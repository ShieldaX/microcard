doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, maximum-scale=1.0")
    - title = title ? title : '微名片'
    title= title
    block styles
      link(rel='stylesheet', href='/stylesheets/o-responsive.css')
      link(rel='stylesheet', href='/stylesheets/templ1.css')
      link(rel='stylesheet', href="http://fonts.useso.com/css?family=Lato:300,400,900,300italic,400italic,900italic")
      link(rel='stylesheet', href='/components/font-awesome/css/font-awesome.min.css')

  body.fullwidth.boxed
    block content
      #top
      #header
        .container.wrap.text-center
          span= card.name
          span= card.position
        span.clear
      #home.sugar-container
        .container.wrap
          .row
            .col.dimfull.text-center#animation
              #ccimage.img-circle
                img(src="/images/avatar-fallback.JPG")
              p#hello Hello, my name is
              h1#ccname= card.name
              p#iam I am
              h2#ccfunction= card.position
      #about.cream-container.parallex(style="background-position: 50% -300px;")
        .icon-container
          div
            span.fa.fa-lg.fa-comment
        .container.wrap
          .row
            .col.dimfull.text-center
              h2 About Me
              p.intro.big= card.write
      #personalinfo.coffee-container.parallax(style="background-position: 50% -21.5px;")
        .icon-container
          div
            span.fa.fa-user.fa-fw.fa-lg
        .container.wrap
          .row
            .col.dimfull.text-center
              h2 Personal Information
              dl.row
                dt.col.dim1half.text-right.padright Email
                dd.col.dim1half.text-left.padleft= card.email
                dt.col.dim1half.text-right.padright Phone
                dd.col.dim1half.text-left.padleft= card.phone
                dt.col.dim1half.text-right.padright Website
                dd.col.dim1half.text-left.padleft= card.site
                dt.col.dim1half.text-right.padright Address
                dd.col.dim1half.text-left.padleft= card.address
      #copyright
        .container.wrap
          .row
            .col.dimfull.text-center
              p &copy; 2014 HT Labs.

    block scripts
      script(type="text/javascript", src="/components/jquery/dist/jquery.min.js")
      //- script(type="text/javascript", src="/javascripts/templ1.js")

  //- .container-fluid
    .top.row.bg-dark.drop_shadow
      .head.col-xs-6.col-xs-offset-3.col-sm-2.col-sm-offset-5
        img.avatar.img-circle.img-thumbnail(src="/images/avatar-fallback.JPG")
      .name.col-xs-12
        h2.text-center
          strong= card.name
          span.small= card.position

    .company.row.bg-white
      .com.col-xs-12
        h3.text-center
          span= card.company

    .info.row.bg-white
      .contact.col-xs-6
        p
          i.fa.fa-mobile.fa-fw.fa-lg
          span= card.mobile
      .contact.col-xs-6
        p
          i.fa.fa-phone.fa-fw
          span= card.phone

      .contact.col-xs-6
        p
          i.fa.fa-fw.fa-envelope
          span= card.email
      .contact.col-xs-12
        p.text-nowrap
          i.fa.fa-fw.fa-globe
          span= card.site
      .contact.col-xs-12(style="border-bottom: 1px solid #dadde3; box-shadow: #fdfdfe 0 1px;")
        address
          i.fa.fa-fw.fa-map-marker
          strong= card.address

      .contact.col-xs-6
        p
          i.fa.fa-fw.fa-qq.text-info
          span= card.qq
      .contact.col-xs-6
        p
          i.fa.fa-weixin.fa-fw.text-success
          span= card.weixin
      .contact.col-xs-6
        p
          i.fa.fa-fw.fa-weibo.text-danger
          span= card.weibo

    .map.bg-warning

