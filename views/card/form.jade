extends ../layout

block content
  .container
    include ../includes/message
    h2.text-center: i.fa.fa-pencil-square-o
      |  填写名片内容
    hr
    form.form-horizontal(action="/card", method="post", role="form")
      fieldset
        h6.text-muted(title="您的个人信息不会透漏给任何不被信任的第三方，请放心填写。") 基本信息 &nbsp;
          span.fa.fa-shield.text-success
        .form-group
          label.control-label.col-sm-3(for="name") 姓名
            i.text-danger *
          .col-sm-6
            input.form-control(type="text", id="name", name="name", placeholder="", autofocus="autofocus", required)
        .form-group
          label.control-label.col-sm-3(for="company") 公司
          .col-sm-6
            input.form-control(type="text", id="company", name="company", placeholder="公司或组织的全称")
        .form-group
          label.control-label.col-sm-3(for="position") 职位
          .col-sm-6
            input.form-control(type="text", id="position", name="position", placeholder="职位或职务")
      fieldset
        h6.text-muted 联系方式
        .form-group
          label.control-label.col-sm-3(for="mobile") 手机
          .col-sm-6
            input.form-control(type="text", id="mobile", name="mobile", placeholder="+00 123 4567 8910")
        .form-group
          label.control-label.col-sm-3(for="phone") 座机
          .col-sm-6
            input.form-control(type="text", id="phone", name="phone", placeholder="0000 123 45678")
        .form-group
          label.control-label.col-sm-3(for="email") 电子邮箱
          .col-sm-6
            input.form-control(type="email", id="email", name="email", placeholder="name@example.com")
        .form-group
          label.control-label.col-sm-3(for="site") 网站
          .col-sm-6
            input.form-control(type="url", id="site", name="site", placeholder="blog.yourhost.com 网站或博客")
        .form-group
          label.control-label.col-sm-3(for="address") 地址
          .col-sm-6
            input.form-control(type="text", id="address", name="address", placeholder="省市 县区 街道 楼座")
      fieldset
        h6.text-muted 社交账号
        .form-group
          label.control-label.col-sm-3(for="qq") QQ
          .col-sm-6
            input.form-control(type="text", id="qq", name="qq", placeholder="12345678")
        .form-group
          label.control-label.col-sm-3(for="weixin") 微信
          .col-sm-6
            input.form-control(type="text", id="weixin", name="weixin", placeholder="weixin")
        .form-group
          label.control-label.col-sm-3(for="weibo") 新浪微博
          .col-sm-6
            input.form-control(type="text", id="weibo", name="weibo", placeholder="@sinaweibo")
      hr
      .form-group
        .col-sm-offset-3.col-sm-9
          button.btn.btn-success.btn-lg(type="submit") 创 建&nbsp;
            i.fa.fa-check
          |  &nbsp;&nbsp;&nbsp;
          a.btn.btn-link(href="/") 返回
