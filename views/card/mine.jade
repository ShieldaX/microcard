//- 用户管理名片界面

extends ../layout

block content
  .container
    .row

  .container
    h2
      i.fa.fa-list
      |  我的名片
    hr
    .row
      .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1
        each card in cards
          .row.well
            .col-md-3.col-sm-12
              - var avatar_src = card.avatar.source ? "/uploads/avatar/" + card.avatar.source : "//placehold.it/140";
              img.img-circle.center-block.img-responsive(src=avatar_src)
              h2.text-center.hidden-lg.hidden-md #{card.name || '未填写'}
            .col-md-7.col-sm-8.col-xs-8
              h2.hidden-xs.hidden-sm #{card.name || '未填写'}
              h5 公司：#{card.company || '——'}
              h5 职位：#{card.position || '——'}
              h5 邮箱：#{card.email || '——'}
              h4: a …

            .col-md-2.col-sm-12.col-xs-12
              .btn-group.pull-right
                a.btn.btn-info.dropdown-toggle(data-toggle="dropdown")
                  | 操作&nbsp;
                  span.fa.fa-cog
                  span.space
                  span.fa.fa-caret-down
                ul.dropdown-menu
                  li: a(href="/card/"+card.id)
                    span.fa.fa-pencil-square-o
                    |  编辑
                  li.disabled: a
                    span.fa.fa-eye-slash
                    |  隐藏